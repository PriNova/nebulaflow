{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Extension (Desktop)",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
            "preLaunchTask": "dev: start-webview-watch",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "sourceMaps": true
        },
        {
            "name": "Launch Web Extension (Browser)",
            "type": "extensionHost",
            "request": "launch",
            "debugWebWorkerHost": true,
            "args": ["--extensionDevelopmentPath=${workspaceFolder}", "--extensionDevelopmentKind=web"],
            "preLaunchTask": "dev: start-webview-watch",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "sourceMaps": true
        }
    ]
}
