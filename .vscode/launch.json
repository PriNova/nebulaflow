{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Extension (Desktop)",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": ["--disable-extensions", "--extensionDevelopmentPath=${workspaceFolder}"],
            "preLaunchTask": "dev: start-webview-watch",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "sourceMaps": true
        },
        {
            "name": "Launch Web Extension (Browser)",
            "type": "extensionHost",
            "request": "launch",
            "debugWebWorkerHost": true,
            "args": [
                "--disable-extensions",
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionDevelopmentKind=web"
            ],
            "preLaunchTask": "dev: start-webview-watch",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "sourceMaps": true
        }
    ]
}
