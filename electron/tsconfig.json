{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16",
        "moduleResolution": "Node16",
        "outDir": "../dist/electron",
        "rootDir": "..",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": ["ES2022", "DOM"]
    },
    "include": ["main/**/*", "preload/**/*", "../workflow/**/*", "../src/**/*"],
    "exclude": ["../node_modules", "../workflow/Web"]
}
