{
    "name": "nebula-flow",
    "displayName": "NebulaFlow Workflow Editor",
    "version": "0.1.9",
    "publisher": "prinova",
    "engines": {
        "vscode": ">=1.90.0"
    },
    "main": "dist/src/extension.js",
    "activationEvents": [],
    "contributes": {
        "commands": [
            {
                "command": "nebulaFlow.openWorkflow",
                "title": "NebulaFlow: Open Workflow Editor"
            }
        ]
    },
    "scripts": {
        "sync:sdk": "pnpm -C /home/prinova/CodeProjects/upstreamAmp/sdk build && npm i /home/prinova/CodeProjects/upstreamAmp/sdk",
        "prebuild": "npm run -s sync:sdk",
        "build:webview": "vite build --config workflow/Web/vite.config.mts",
        "watch:webview": "vite build --watch --config workflow/Web/vite.config.mts --mode development",
        "prebuild:ext": "npm run -s sync:sdk",
        "build:ext": "node scripts/bundle-ext.mjs",
        "typecheck": "tsc -p . && tsc -p workflow/Web/tsconfig.json",
        "biome": "biome check --apply --error-on-warnings .",
        "format": "npm run biome",
        "check": "npm run -s typecheck && npm run -s biome",
        "lint": "npm run biome",
        "build": "npm run -s typecheck && npm run -s build:webview && npm run -s build:ext",
        "package:vsix": "npm run -s build && rm -f dist/${npm_package_name}-${npm_package_version}.vsix && vsce package --no-dependencies --out dist/${npm_package_name}-${npm_package_version}.vsix"
    },
    "dependencies": {
        "@radix-ui/react-accordion": "^1.1.2",
        "@radix-ui/react-checkbox": "^1.0.4",
        "@radix-ui/react-label": "^2.0.2",
        "@radix-ui/react-popover": "^1.1.2",
        "@radix-ui/react-slot": "^1.0.2",
        "@radix-ui/react-switch": "^1.0.3",
        "@radix-ui/react-tooltip": "^1.0.7",
        "@sourcegraph/amp-sdk": "file:../upstreamAmp/sdk",
        "@vscode/codicons": "^0.0.36",
        "@xyflow/react": "^12.1.4",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.1",
        "happy-dom": "^14.0.0",
        "lucide-react": "^0.460.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "uuid": "^10.0.0"
    },
    "devDependencies": {
        "@biomejs/biome": "1.7.2",
        "@sourcegraph/tsconfig": "^4.0.1",
        "@types/node": "^20.11.30",
        "@types/react": "^18.2.66",
        "@types/react-dom": "^18.2.22",
        "@types/uuid": "^10.0.0",
        "@types/vscode": "^1.90.0",
        "@vitejs/plugin-react": "^4.3.3",
        "@vscode/vsce": "^3.0.0",
        "esbuild": "^0.21.5",
        "postcss": "^8.4.47",
        "postcss-nested": "^6.0.1",
        "tailwindcss": "^3.4.13",
        "typescript": "^5.6.3",
        "vite": "^5.4.8"
    }
}
