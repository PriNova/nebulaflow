{
    "extends": "@sourcegraph/tsconfig",
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16",
        "lib": ["ES2022"],
        "outDir": "dist",
        "rootDir": ".",
        "declaration": false,
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noUnusedParameters": false,
        "skipLibCheck": true,
        "moduleResolution": "Node16",
        "jsx": "react-jsx",
        "noUnusedLocals": false
    },
    "include": ["src", "workflow/**/*.ts", "workflow/**/*.tsx"],
    "exclude": ["node_modules", "workflow/Web"]
}
