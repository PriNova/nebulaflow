{
    "extends": "@sourcegraph/tsconfig",
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "lib": ["ES2022"],
        "outDir": "dist",
        "rootDir": ".",
        "declaration": false,
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "noUnusedLocals": true
    },
    "include": ["src", "workflow/Application", "workflow/Core", "workflow/DataAccess"],
    "exclude": ["node_modules", "webview", "workflow/Web"]
}
